<div class="page-header">
  <h1> <%= @game.name %> </h1>
</div>

<h3> White Player: <%= get_username(@game.white_player_id) %> </h3>

<% if @game.black_player_id != nil %>
  <h3> Black Player: <%= get_username(@game.black_player_id) %> </h3>
<% end %>

<table class="chessboard">
  <% (0..7).each do |column| %>
    <tr class="row">
      <% (0..7).each do |row| %>
        <td class="square" id="<%=row%><%=column%>" data-x="<%=row%>" data-y="<%= column %>">

        </td>

      <% end %>
    </tr>
  <% end %>
</table>