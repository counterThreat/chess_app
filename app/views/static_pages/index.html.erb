<div class="container-fluid">
  <!-- LEFT HOMEPAGE -->
  <div class="row">
    <div class="col-sm-7 col-sm-offset-1 app-info">
      <!-- APP DESCRIPTION -->
      <div class="row">
      <h4>What is Counter Threat?</h4>
        <%= image_tag ("logo.png"), :class => 'img-responsive' %>
      <br>
        <p>Counter Threat Chess is a fullstack web application that allows users to play one another in fully-functional, live-updating games of chess. Gameplay is completely rule-enforced whether you're a beginner at chess or a grandmaster. Enjoy!</p>
      </div>
      <!-- USER RANKINGS -->
      <div class="row">
        <h4>The Grand Masters</h4>
        #leaderboard
      </div>
    </div>

    <!-- RIGHT SIDEBAR -->
    <div class="col-sm-3 col-sm-1" id="readyplay">
      <div class="row" >
        <!-- bobby fischer -->
        <%= image_tag ("bobby.jpg"), :class => 'img-responsive' %> 
        <br>
        <% if user_signed_in? %>

        <div class="active-side">
        
          <!-- user profile -->
          <div class="user-profile">

              <!-- username block -->
              <p style="text-align:left;font-size:17px">@<b><%= current_user.username %></b></p>

              <!-- user avatar -->
              <%= gravatar_for current_user, :class => "img-responsive", :id => "gravatar" %>

              <!-- profile info -->
              <ul id="prof-data">
                <li><p><b>Wins: </b><%= current_user.win_count %></p></li>
                <li><p><b>Rank: </b>#</p></li>
              </ul> 

              <!-- sign out if not you -->
              <small style="display:inline">
                Not you? <%= link_to 'Sign Out',  destroy_user_session_path, :method => :delete  %>
              </small>
            </div>

          <!-- BUTTONS -->
          <div class="play-buttons">
            <!-- new game  -->
            <%= button_to('New Game', new_game_path(@game), :class => 'button', method: 'get') %>  
            <!-- open games -->
            <%= button_to('Join Game', games_path(@game), :class=> 'button', method: 'get') %>
          </div>
        </div>

        <br>
        
        <% else %>
        
        <!-- sign up if you're not a member -->
        <p>Welcome! Sign up here to get started:
        <%= link_to 'Sign Up', new_user_registration_path %>
        </p>
        
        <% end %>
      </div>
      
      <!-- CREATOR CREDITS -->
      
      <div class="row architects" style="text-align:right;padding-right:10px;">
        <h4 style="text-align:right !important">The Architects of CounterThreat</h4>
        <br>
        <p><a href="http://www.kathleenfrench.co">Kathleen French</a> @<a href="https://www.github.com/frenchamnesty">github</a></p>
        <p><a href="http://haleymnatzaganian.getforge.io/">Haley Mnatzaganian</a> @<a href="https://github.com/haleymnatz">github</a></p>
        <p>Lindsay Dages @<a href="https://github.com/lnzd17">github</a></p>
        <p>David Michael Pena @<a href="https://github.com/DavidMichaelPena">github</a></p>
        <p>Anna C @<a href="https://github.com/canelasa">github</a></p>
        <p>Mentored by: Abe Polishchuk</p>
      </div>
    </div>
  </div>

</div>
